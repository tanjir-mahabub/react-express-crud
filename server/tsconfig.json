{
  "include": ["src", "src/config"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],        
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] 
  }
}
